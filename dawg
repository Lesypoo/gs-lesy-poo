wafer7@SysOpLes:~/sys_final/final-dev/k8s$ cat webapp-deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: webapp
spec:
  replicas: 1
  selector:
    matchLabels:
      app: webapp
  template:
    metadata:
      labels:
        app: webapp
    spec:
      containers:
      - name: webapp
        image: pulleym1/spring-app:latest
        ports:
        - containerPort: 8080
